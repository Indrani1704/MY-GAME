<!DOCTYPE html>
<html>
<head>
  <title>üé¥ Memory Game Lobby</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Cinzel+Decorative:wght@700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Cinzel Decorative', serif;
      background: #198754;
      color: white;
      text-align: center;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }

    h1, h2 {
      font-family: 'Cinzel Decorative', serif;
      font-weight: bold;
      background: linear-gradient(45deg, #FFD700, #FFA500, #FF6347);
      background-clip: text;
      -webkit-background-clip: text;
      color: transparent;
      -webkit-text-fill-color: transparent;
      text-shadow: 1px 1px 6px rgba(0,0,0,0.7);
    }

    /* Join Game Card */
    .card {
      background: rgba(0,0,0,0.7);
      border-radius: 15px;
      padding: 60px 40px;
      color: white;
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%;
      max-width: 600px;
      min-height: 500px;
      transition: all 0.4s ease;
      box-shadow: 0 4px 20px rgba(255,255,255,0.2);
    }
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 0 30px #FFD700, 0 0 60px #FFA500;
    }
    .card h1 {
      font-size: 3rem;
      margin-bottom: 20px;
    }
    .card h2 {
      font-size: 2rem;
      margin-bottom: 30px;
    }
    .form-control {
      margin-bottom: 20px;
      border-radius: 12px;
      text-align: center;
      font-size: 1.2rem;
      width: 100%;
      max-width: 450px;
      padding: 12px 15px;
      border: 2px solid #ccc;
      transition: all 0.3s ease;
    }
    .form-control:focus, .form-control:hover {
      border-color: #FFD700;
      box-shadow: 0 0 12px #FFD700;
      outline: none;
    }
    button {
      width: 100%;
      max-width: 300px;
      border-radius: 12px;
      font-size: 1.2rem;
      font-weight: bold;
      padding: 14px 0;
      background: gold;
      border: 1px solid #daa520;
      color: black;
      transition: all 0.3s ease;
      margin-top: 10px;
    }
    button:hover {
      transform: scale(1.05);
      box-shadow: 0 0 20px #FFD700, 0 0 40px #FFA500;
    }

    /* Responsive adjustments for mobile */
    @media (max-width: 768px) {
      .card { 
        width: 95%; 
        padding: 50px 30px;
        min-height: 450px;
      }
      .card h1 { font-size: 2.5rem; }
      .card h2 { font-size: 1.8rem; }
      .form-control { max-width: 95%; font-size: 1.1rem; padding: 12px; }
      button { max-width: 95%; font-size: 1.1rem; padding: 14px 0; }
    }

    @media (max-width: 480px) {
      .card { padding: 40px 20px; min-height: 420px; }
      .card h1 { font-size: 2.2rem; }
      .card h2 { font-size: 1.6rem; }
      .form-control { font-size: 1rem; padding: 10px; }
      button { font-size: 1rem; padding: 12px 0; }
    }

    /* Modal */
    .modal-overlay {
      position: fixed;
      top: 0; left: 0; right: 0; bottom: 0;
      background: rgba(0,0,0,0.8);
      display: none;
      justify-content: center;
      align-items: center;
      z-index: 2000;
    }
    .modal-overlay.active { display: flex !important; }
    .modal-card {
      background: rgba(0,0,0,0.85);
      padding: 40px 30px;
      border-radius: 15px;
      box-shadow: 0 0 25px #FFD700;
      max-width: 400px;
      width: 90%;
      text-align: center;
      animation: fadeIn 0.3s ease;
      position: relative;
    }
    @keyframes fadeIn { from { opacity: 0; transform: scale(0.95); } to { opacity: 1; transform: scale(1); } }
    .close-btn { position: absolute; top: 15px; right: 20px; font-size: 2rem; color: #FFD700; cursor: pointer; font-weight: bold; user-select: none; }
    .close-btn:hover { color: #FFA500; }
  </style>
</head>
<body>

  <!-- Join Game Card -->
  <div class="card">
    <h1>üÉÅüÇ°üÇ±üÉë</h1>
    <h2>Memory Card Game</h2>
    <input type="text" id="joinUsername" class="form-control" placeholder="Enter Username">
    <input type="text" id="gameCode" class="form-control" placeholder="Enter Game Code">
    <button id="joinGame">Join Game</button>
  </div>

  <!-- Create Game Button -->
  <button id="createGameHeader">Create Game</button>

  <!-- Create Game Modal -->
  <div id="createGameModal" class="modal-overlay">
    <div class="modal-card">
      <span class="close-btn" id="closeCreateModal">&times;</span>
      <h2>Create Game</h2>
      <input type="text" id="createUsernameModal" class="form-control" placeholder="Enter Username">
      <button id="createGameModalBtn">Create</button>
    </div>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    const createModal = document.getElementById("createGameModal");
    const createBtn = document.getElementById("createGameHeader");
    const closeBtn = document.getElementById("closeCreateModal");

    // Show modal
    createBtn.onclick = () => createModal.classList.add("active");

    // Close modal
    closeBtn.onclick = () => createModal.classList.remove("active");

    // Click outside modal to close
    createModal.onclick = (e) => { if(e.target === createModal) createModal.classList.remove("active"); };

    // Create game button inside modal
    document.getElementById("createGameModalBtn").onclick = () => {
      const username = document.getElementById("createUsernameModal").value.trim();
      if(!username) return alert("Enter username");
      window.location.href = `/game/new/${username}`;
    };

    // Join game button
    document.getElementById("joinGame").onclick = () => {
      const u = document.getElementById("joinUsername").value.trim();
      const c = document.getElementById("gameCode").value.trim();
      if(!u || !c) return alert("Enter username and game code");
      window.location.href = `/game/${c}/${u}`;
    };
  </script>
</body>
</html>
